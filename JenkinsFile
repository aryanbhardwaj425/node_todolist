pipeline {
    agent any
    stages {
        stage('Install Node.js') {
            steps {
                script {
                    // Install Node.js (example for Ubuntu)
                    sh '''
                    curl -sL https://deb.nodesource.com/setup_14.x | sudo -E bash -
                    sudo apt-get install -y nodejs
                    '''
                }
            }
        }
        stage('Build') { 
            steps {
                sh 'npm install' 
            }
        }
    }
}


