pipeline {
    agent any
    stages {
        stage('Install Node.js') {
            steps {
                script {
                    sh '''
                    curl -sL https://deb.nodesource.com/setup_14.x | -E bash -
                    apt-get install -y nodejs npm
                    '''
                }
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'  // Now that Node.js is installed, run npm install
            }
        }
    }
}
